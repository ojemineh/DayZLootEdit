        <GroupBox x:Name="grpPercent" Header="Percent" HorizontalAlignment="Left" Height="64" Margin="10,0,0,0" Grid.Row="1" VerticalAlignment="Top" Width="310">
            <DockPanel LastChildFill="False" Margin="0">
                <DockPanel LastChildFill="False" Width="258" HorizontalAlignment="Left">
                    <TextBox x:Name="txtPercent" HorizontalAlignment="Left" Height="21" Margin="5,10,0,0" Grid.Row="1" Text="100%" VerticalAlignment="Top" Width="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" KeyUp="txtPercent_KeyUp" LostFocus="txtPercent_LostFocus" GotFocus="txtPercent_GotFocus"/>
                    <Slider x:Name="sldPercent" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,5,0,0" Width="200" LargeChange="10" Maximum="200" SmallChange="1" Value="100" TickFrequency="50" TickPlacement="Both" ValueChanged="sldPercent_ValueChanged"/>
                </DockPanel>
                <DockPanel LastChildFill="False" Width="40" HorizontalAlignment="Left">
                    <Button x:Name="btnPercent" Content="SET" HorizontalAlignment="Left" Margin="0" Grid.Row="1" VerticalAlignment="Top" Width="40" Height="41" Click="btnPercent_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="ToolTipService.ToolTip" Value="Changes the Nominal/Min value to the corresponding percentage values."/>
                                <Setter Property="ToolTipService.ShowDuration" Value="10000"/>
                            </Style>
                        </Button.Style>
                    </Button>
                </DockPanel>
            </DockPanel>
        </GroupBox>
        
