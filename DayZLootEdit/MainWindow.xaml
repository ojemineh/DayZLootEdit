                    <CheckBox x:Name="chkFilterInHoarder" Content="InHoarder" Height="16" VerticalAlignment="Top" Margin="0,3,0,0" DockPanel.Dock="Top" HorizontalAlignment="Left" Click="chkFilterInHoarder_Click"/>
                </DockPanel>
                <DockPanel LastChildFill="False" Width="80" Margin="10,0,0,0" HorizontalAlignment="Left">
