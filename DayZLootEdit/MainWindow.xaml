                <DockPanel LastChildFill="False" Width="85" HorizontalAlignment="Left">
                    <Button x:Name="btnFilterReset" Content="Reset" Width="40" HorizontalAlignment="Left" Click="btnFilterReset_Click" Margin="0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="ToolTipService.ToolTip" Value="Click to reset/disable filter. Ctrl+Click deletes all filter entries."/>
                                <Setter Property="ToolTipService.ShowDuration" Value="10000"/>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="btnFilterExec" Content="Filter" Width="40" Margin="5,0,0,0" Click="btnFilterExec_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="ToolTipService.ToolTip" Value="Filter loot items according to the selected filter options."/>
                                <Setter Property="ToolTipService.ShowDuration" Value="10000"/>
                            </Style>
                        </Button.Style>
                    </Button>
                </DockPanel>
                <DockPanel LastChildFill="False" Width="180" Margin="10,0,0,0" HorizontalAlignment="Left">
                    <CheckBox x:Name="chkFilterName" Content="Classname" Height="16" VerticalAlignment="Top" DockPanel.Dock="Top" HorizontalAlignment="Left" Click="chkFilterName_Click"/>
                    <TextBox x:Name="txtFilterName" Height="22" VerticalAlignment="Top" Margin="0,3,0,0" DockPanel.Dock="Top" VerticalContentAlignment="Center" GotFocus="txtFilterName_GotFocus"/>
                </DockPanel>
                <DockPanel LastChildFill="False" Width="80" HorizontalAlignment="Left" Margin="10,0,0,0">
