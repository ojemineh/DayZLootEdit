                    <CheckBox x:Name="chkFilterInPlayer" Content="InPlayer" Height="16" VerticalAlignment="Top" DockPanel.Dock="Top" Margin="0,3,0,0" HorizontalAlignment="Left" Click="chkFilterInPlayer_Click"/>
                </DockPanel>
                <DockPanel LastChildFill="False" Width="80" Margin="10,0,0,0" HorizontalAlignment="Left">
